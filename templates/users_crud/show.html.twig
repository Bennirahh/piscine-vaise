{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>UserName</th>
                <td>{{ user.UserName }}</td>
            </tr>
            <tr>
                <th>UserFirstname</th>
                <td>{{ user.UserFirstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>UserPhone</th>
                <td>{{ user.UserPhone }}</td>
            </tr>
            <tr>
                <th>UserBirthday</th>
                <td>{{ user.UserBirthday ? user.UserBirthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UserIsAdmin</th>
                <td>{{ user.UserIsAdmin ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_users_crud_index') }}">back to list</a>

    <a href="{{ path('app_users_crud_edit', {'id': user.id}) }}">edit</a>

    {{ include('users_crud/_delete_form.html.twig') }}
{% endblock %}
