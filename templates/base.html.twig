<!DOCTYPE html>
<html>
    <body>
        <header>
            <div class="header-navbar">
                <ul {% if app.request.get('_route') in ['billetterie', 'profil', 'profiledit'] %} style="background-color: white; padding-top: 10px; margin: 0;" {% endif %}>
                    <li>
                        <a class="header-liens" href="{{ path('accueil') }}">Accueil</a>
                    </li>
                    <li>
                        <a class="header-liens" href="{{ path('billetterie') }}">Billetterie</a>
                    </li>
                    <li>
                        <a class="footer-lien" href="{{ path('accueil') }}">
                            <img width="60%" class="header-logo1" src="../img/Logo1.png" alt="">
                        </a>
                    </li>
                    <li>
                        <a class="header-liens" href="{{ path('accueil') }}#contactSection">Contact</a>
                    </li>
                    <li>
                        {% if app.user %}
                            <a class="header-liens" href="{{ path('profil') }}">Profil</a>
                        {% else %}
                            <a class="header-liens" href="{{ path('login') }}">Connexion</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </header>
        {% block body %}{% endblock %}
