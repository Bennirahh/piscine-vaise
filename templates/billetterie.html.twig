    </div>
        
        <div class="billetterie-reservation">
            <div class="billetterie-reservation-case">
                {% for location in locations %}

                    
                <img src="{{ asset('uploads/images/' ~ location.image) }}" alt="Event Image" style="width: 200px; height: 200px;">
                <H2>{{location.locationName}}</H2>
                <p>{{ location.description }}</p>

                <button class="billetterie-tarifs-acheter">Réserver</button>
                {% endfor %}    
                
            </div>

        </div>        
        
        <div class="billetterie-reservation">
            <div class="billetterie-reservation-case">
                {% for equipement in equipements %}

                    
                <img src="{{ asset('uploads/images/' ~ equipement.images) }}" alt="Event Image" style="width: 200px; height: 200px;">
                <H2>{{equipement.equipementName}}</H2>
                <p>{{ equipement.description }}</p>

                <button class="billetterie-tarifs-acheter">Réserver</button>
                {% endfor %}    
                
            </div>

        </div>



    <script src="{{ asset('js/theme.js') }}"></script>

    {% endblock %}

</html>