{% extends 'base.html.twig' %}

{% block title %}Nos Événements{% endblock %}

{% block body %}
    <h1>Nos événements</h1>

    <div class="events">
        {% for event in events %}
            <div class="event">
                <h2>{{ event.eventName }}</h2>
                <p><strong>Date :</strong> {{ event.eventDate|date('d/m/Y H:i') }}</p>
                <p><strong>Prix :</strong> {{ event.eventPrice }}€</p>
            </div>
        {% else %}
            <p>Aucun événement disponible actuellement.</p>
        {% endfor %}
    </div>
{% endblock %}
