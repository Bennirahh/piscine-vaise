{% extends 'base.html.twig' %}
{% block title %}Log in!
{% endblock %}
{% block body %}
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Login</title>
		<link rel="stylesheet" href="{{ asset('css/theme.css') }}">
	</head>
	<body>
		<div class="page-login">
			<div class="login-navbar">
			</div>
			<div class="login-centre">
				<div class="login-titre login-titre-bloc">
					<p class="login-titre login-titre1">SE CONNECTER</p>
					<p class="login-titre login-titre2">CONTENT DE TE REVOIR</p>
					<p class="login-texte">Réactivez votre énergie ! Connectez-vous pour accéder à vos séances et révélez le potentiel athlétique qui est en vous</p>
				</div>
				<div class="login-formulaire-bloc">
					<form method="post" class="login-formulaire">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}

						<p class="login-form-titre">Votre compte</p>
						<label class="login-label" for="username">E-mail</label><br>
						<input class="login-input" type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" placeholder="Votre adresse mail" required autofocus><br>
						<label class="login-label" for="password">Mot de passe</label><br>
						<input class="login-input" type="password" name="_password" id="password" autocomplete="current-password" placeholder="Votre mot de passe" required><br>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<button class="login-submit" type="submit">
							Se connecter
						</button>

						<div class="login-barre"></div>
						<div class="login-form-footer">
							<p>Vous n'avez pas de compte ?</p>
							<div></div>
							<div class="login-form-footer-logo">
								<p>S'inscrire</p>
								<img src="{{ asset('img/login-submit.png') }}">
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		 <script src="{{ asset('js/theme.js') }}"></script>
	</body>
</html>
{% endblock %}